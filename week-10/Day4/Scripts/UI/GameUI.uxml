        <ui:Label name="final-score-label" text="Score: 0" class="score-large" style="-unity-text-align: middle-center; font-size: 80px; color: rgb(146, 253, 255); margin-top: 84px; text-shadow: 4px 4px 0 rgba(0, 0, 0, 0.31); -unity-font-style: bold;"/>
