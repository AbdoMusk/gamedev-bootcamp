        </ui:VisualElement>
    </ui:VisualElement>
    <ui:VisualElement name="menu-panel" enabled="true" class="panel overlay" style="justify-content: flex-start; align-items: stretch; align-self: auto; align-content: flex-start; margin-top: 0; margin-right: 0; margin-bottom: 0; margin-left: 0; padding-top: 20px; padding-right: 20px; padding-bottom: 20px; padding-left: 20px; background-color: rgba(0, 0, 0, 0.41); height: 100%; width: 100%; background-size: 100% 100%; display: none;">
