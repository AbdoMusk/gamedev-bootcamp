            <ui:Label name="score-label" text="Score: 0" class="hud-label" style="font-size: 102px; color: rgb(150, 236, 233); -unity-font-style: bold; -unity-text-outline-color: rgb(255, 255, 255); -unity-text-outline-width: 4px; text-shadow: 6px 6px 0 rgba(0, 0, 0, 0.25);"/>
